{
    "environ" :
    {
        "seed": 304,
        "deterministic": false,
        "repo_name": "MyTorch"
    },

    "model" :
    {
        "pretrained_model": "/data1/wangxin/pretrained_models/resnet50_v1c.pth",
        "continue_path": "",
        "deep_stem": true,
        "bn_momentum": 0.1,
        "bn_eps": 1e-05,
        "sync_bn": true,
        "fix_bias": true,
        "fix_bn": false
    },

    "train" :
    {
        "batch_size": 8,
        "lr": 0.01,
        "lr_power": 0.9,
        "momentum": 0.9,
        "weight_decay": 0.0001,
        "nepochs": 80,
        "num_workers": 24,
        "scale_array": [0.75, 1, 1.25, 1.5, 1.75, 2.0]
    },

    "data": {
        "dataset_path": "/data1/wangxin/CityScapes",
        "crop_h": 713,
        "crop_w": 713,
        "num_classes": 19,
        "background": -1,
        "image_mean": [0.485, 0.456, 0.406],
        "image_std": [0.229, 0.224, 0.225],
        "is_test": false
    },

    "eval": {
        "iter": 30,
        "crop_size": 713,
        "stride_rate":  "2/3",
        "flip": false,
        "scale_array": [1]
    },

    "snapshot":
    {
        "name": "pspnet_cityscapes",
        "root": "/data1/wangxin/snapshots"
    }
}